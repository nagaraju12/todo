<p id="notice"><%= notice %></p>

<h1>Listing Sub_categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |sub_category| %>
      <tr>
        <td><%= sub_category.name %></td>
      <td><%= link_to "delete",category_sub_category_path(params[:category_id], sub_category.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Sub_Category', new_sub_category_path %>